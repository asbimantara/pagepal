{
    "name": "user/book",
    "description": "PagePal - Aplikasi tracking buku",
    "type": "project",
    "require": {
        "php": "^8.2",
        "mongodb/mongodb": "^1.20",
        "vlucas/phpdotenv": "^5.6",
        "ext-mongodb": "*"
    },
    "require-dev": {
        "heroku/heroku-buildpack-php": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "chmod -R 755 vendor/bin/heroku-php-apache2"
        ]
    }
}
